{
  "parser": "babel-eslint",
  "rules": {
    "react/prefer-stateless-function": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  },
  "extends": ["airbnb", "plugin:jest/recommended"],
  "plugins": ["react", "jsx-a11y", "import", "jest"],

  "env": {
    "browser": true,
    "node": true
  }
}
